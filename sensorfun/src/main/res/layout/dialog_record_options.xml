<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<TextView-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="48dp"-->
        <!--android:text="Recording Options"-->
        <!--android:id="@+id/textView"-->
        <!--android:textSize="16sp"-->
        <!--style="@android:style/Widget.Holo.Light.TextView.ListSeparator"-->
        <!--android:layout_gravity="center_horizontal" />-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sensor Selected"
        style="@style/ListSeparator"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:id="@+id/textViewSensorSelected" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Length of Recording"
        style="@style/ListSeparator"
        android:id="@+id/textView2" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1 min."
            android:id="@+id/textView3"
            android:gravity="left"
            android:layout_gravity="bottom"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textViewRecordLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="1 min."
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="no limit"
            android:id="@+id/textView4"
            android:layout_gravity="bottom"
            android:gravity="center_vertical|right"
            android:layout_weight="1" />
    </LinearLayout>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/seekBar" />

</LinearLayout>