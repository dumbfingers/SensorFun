<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textAccelerometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Accelerometer"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textAmbientTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textAccelerometer"
        android:layout_centerHorizontal="true"
        android:text="Ambient Temperature"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textGravity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textAmbientTemp"
        android:layout_centerHorizontal="true"
        android:text="Gravity"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textGyroscope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textGravity"
        android:layout_centerHorizontal="true"
        android:text="Gyroscope"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textGyroscope"
        android:layout_centerHorizontal="true"
        android:text="Light"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textLinearAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textLight"
        android:layout_centerHorizontal="true"
        android:text="Linear Acceleration"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textMagField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textLinearAcc"
        android:layout_centerHorizontal="true"
        android:text="Magnetic Field"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textPressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textMagField"
        android:layout_centerHorizontal="true"
        android:text="Pressure"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textProximity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textPressure"
        android:layout_centerHorizontal="true"
        android:text="Proximity"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textRelaHumid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textProximity"
        android:layout_centerHorizontal="true"
        android:text="Relative Humidity"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textRotVect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textRelaHumid"
        android:layout_centerHorizontal="true"
        android:text="Rotation Vector"
        android:visibility="visible" />

</RelativeLayout>